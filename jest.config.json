{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/dist/"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
   "roots": ["<rootDir>/tests"]
}